<h1><%= @merchant.name %>'s Bulk Discount Index</h1>


<section id="next-public-holidays">
<h3>Upcoming Holidays</h3>
  <ol>
    <% @holidays.each do |holiday| %>
      <li><%= holiday.name %> <br>   <%= holiday.date.to_date.strftime("%A, %B %-d, %Y") %></li> <br>
    <% end %>
  </ol>
</section>

<p><%= link_to "Create New Bulk Discount", new_merchant_bulk_discount_path %></p>

<% @merchant.bulk_discounts.each do |discount| %>
  <p id="bulk-discount-<%= discount.id %>">
    Bulk Discount <%= discount.id %> <br>
    Percentage Discount: <%= number_to_percentage(discount.percentage_discount*100, precision: 0) %> <br>
    Quantity Threshold: <%= discount.quantity_threshold %> <br>
    <%= link_to "To Bulk Discount #{discount.id} Show Page", merchant_bulk_discount_path(@merchant, discount) %> <br>
    <%= link_to "Delete Bulk Discount #{discount.id}", merchant_bulk_discount_path(@merchant, discount), method: :delete %>
  </p>
<% end %>